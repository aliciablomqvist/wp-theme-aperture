{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1600px"
    },
    "color": {
      "palette": [
        {
          "slug": "black",
          "color": "#000000",
          "name": "Black"
        },
        {
          "slug": "white",
          "color": "#FFFFFF",
          "name": "White"
        },
        {
          "slug": "dark-gray",
          "color": "#1A1A1A",
          "name": "Dark Gray"
        },
        {
          "slug": "medium-gray",
          "color": "#666666",
          "name": "Medium Gray"
        },
        {
          "slug": "light-gray",
          "color": "#CCCCCC",
          "name": "Light Gray"
        },
        {
          "slug": "off-white",
          "color": "#F5F5F5",
          "name": "Off White"
        },
        {
          "slug": "accent",
          "color": "#FF0000",
          "name": "Accent Red"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Crimson Text', serif",
          "slug": "crimson",
          "name": "Crimson Text"
        },
        {
          "fontFamily": "'Inter', -apple-system, sans-serif",
          "slug": "inter",
          "name": "Inter"
        },
        {
          "fontFamily": "'Space Mono', monospace",
          "slug": "mono",
          "name": "Space Mono"
        }
      ],
      "fontSizes": [
        {
          "slug": "tiny",
          "size": "0.75rem",
          "name": "Tiny"
        },
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.5rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "2.5rem",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "4rem",
          "name": "XX Large"
        },
        {
          "slug": "huge",
          "size": "6rem",
          "name": "Huge"
        }
      ]
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--black)",
      "text": "var(--wp--preset--color--white)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--crimson)",
          "fontSize": "var(--wp--preset--font-size--huge)",
          "fontWeight": "400",
          "lineHeight": "1.1",
          "letterSpacing": "-0.02em"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--crimson)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "400",
          "lineHeight": "1.2",
          "letterSpacing": "-0.01em"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--inter)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "600",
          "lineHeight": "1.3"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--white)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--light-gray)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--white)",
          "text": "var(--wp--preset--color--black)"
        },
        "typography": {
          "fontSize": "0.8rem",
          "fontWeight": "600",
          "letterSpacing": "0.1em",
          "textTransform": "uppercase"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--accent)",
            "text": "var(--wp--preset--color--white)"
          }
        }
      }
    }
  }
}
